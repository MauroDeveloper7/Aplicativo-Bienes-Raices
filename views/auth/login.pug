extends ../layout/index

block content
    .py-5
        h1.text-center.text-5xl.my-5.font-extrabold.text-white(class="font-sans md:font-serif") Bienes
            span.font-normal Raíces
        h2.text-center.text-3xl.font-extrabold.text-white(class="font-sans md:font-serif")= pagina

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores 
                    p.text-blue-800.font-bold.uppercase.text-xs.text-center.p-1= error.msg

        .mt-8.mx-auto.max-w-lg
            .py-8.px-6.shadow-md.rounded-lg(class="bg-white")
                form(method="POST" noValidate)
                    input(name="_csrf" value=csrfToken type="hidden")
                    div.mb-6
                        label.block.text-sm.uppercase.text-neutral-950.mb-1.font-bold(for="email") Correo Electrónico
                        input#email.w-full.py-2.px-3.placeholder-gray-400.rounded-lg(class="bg-input" placeholder="Ingresa tu Correo Electrónico" name="email" type="email" value=user ? user.email : '')
                    div.mb-6
                        label.block.text-sm.uppercase.text-neutral-950.mb-1.font-bold.rounded-lg(for="password") Contraseña
                        input#password.w-full.py-2.px-3.placeholder-gray-400.rounded-lg(class="bg-input" placeholder="Ingresa tu Contraseña" name="password" type="password")
                    input(class="w-full bg-boton hover:bg-boton_2 text-black hover:text-white font-bold py-3 cursor-pointer uppercase text-sm rounded-md" type="submit" value="Iniciar Sesión")
                    .flex.items-center.justify-between.mt-5
                        a.text-neutral-950.text-xs(href="/auth/registro") ¿No tienes una cuenta todavía? Crear Cuenta
                        a.text-neutral-950.text-xs(href="/auth/olvide-password") ¿Olvidaste tu contraseña?
